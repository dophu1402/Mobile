<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUpConnection"
    android:orientation="vertical"
    android:background="@color/redWines"
    android:weightSum="10">

    <Button
        android:id="@+id/btnBackConnect"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/backbutton"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/whiteLight"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/background_connectbtn"
            android:padding="25dp">
            <Button
                android:id="@+id/btnPlayonOnline"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/buttonwifirouter"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIFI NETWORK\nCONNECTION"
                android:textColor="@color/whiteLight"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/background_connectbtn"
            android:padding="25dp">
            <Button
                android:id="@+id/btnPlayonOffline"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/buttonduel"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO WIFI\nNETWORK CONNECTION"
                android:textColor="@color/whiteLight"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>