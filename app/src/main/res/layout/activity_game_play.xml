<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WifiConnect"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:rotation="180">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/redSurrenderBtn"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/peace"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surrender"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/redBackwardBtn"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_marginRight="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/time_color"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
            <TextView
                android:id="@+id/opponent_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_above="@+id/zoom"
                android:layout_margin="20dp"
                android:text="chat">
            </TextView>
            <com.example.duelmultiplayergame.ZoomLayout
                android:id="@+id/zoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#666666"
                android:layout_centerInParent="true">
                <!--        <RelativeLayout-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="match_parent"-->
                <!--            android:gravity="center"-->
                <!--            android:id="@+id/myRelative"-->
                <!--            >-->
                <GridLayout

                    android:id="@+id/myGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:columnCount="20"
                    android:rowCount="20"
                    android:background="@android:color/background_light"
                    android:layout_centerInParent="true">
                </GridLayout>


                <!--        </RelativeLayout>-->
            </com.example.duelmultiplayergame.ZoomLayout>
            <TextView
                android:id="@+id/my_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_below="@+id/zoom"
                android:layout_margin="20dp"
                android:text="chat">
            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blueSurrenderBtn"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/peace"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surrender"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blueBackwardBtn"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_marginRight="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/time_color"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/messchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="10">
            <EditText
                android:id="@+id/chatMsg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:ems="10"
                android:inputType="textPersonName"/>
            <Button
                android:id="@+id/chatButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="Send"/>
        </LinearLayout>
    </LinearLayout>

